<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when AutoCompleteTextView is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ECECEC" /> <!-- Background color when pressed -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <stroke android:color="#707070" android:width="1dp" /> <!-- Border color and width -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Default background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <stroke android:color="#707070" android:width="1dp" /> <!-- Border color and width -->
        </shape>
    </item>
</selector>
